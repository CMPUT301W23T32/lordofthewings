<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_qr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/qrcode_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_md"
            android:clipToOutline="true"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/qrcode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QRCode Name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="start"/>
            <TextView
                android:id="@+id/qrcode_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QRCode Points"
                android:layout_gravity= "start"
                android:layout_marginTop="4dp"
                />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/qrDeleteButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/delete_icon"
            android:contentDescription="Deletes QRCode" />
    </LinearLayout>

</LinearLayout>
